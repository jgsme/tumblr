html, body
  padding 0
  margin 0

body
  letter-spacing -0.02em
  line-height 1.4
  font-size 18px

  #alert
    p
      text-align center

  article
    width 13000px

  #container
    background-color #f3f3f3
    overflow scroll
    display none

    &::-webkit-scrollbar
      display none

  a
    color #282828
    &:hover
      color #575757

  blockquote
    border-left #cbcbcb 5px solid
    padding-left 1em

  .date
    padding-left 8%
    font-family sans-serif
    font-size .6em

  .caption
    width 82%
    padding-left 8%
    max-width 900px
    font-size .6em

    img
      width 100%
      height auto

  .post
    margin-right 2em
    float left
    display inline-block
    max-width 1280px

  .starcontainer
    display inline

@import 'posts/**/*'
@import 'postnotes/*'
@import 'pagination/*'
