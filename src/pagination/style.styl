.pagination
  position fixed
  background-color rgba(0, 0, 0, 0.5)
  bottom 0
  width 100%
  line-height 1em

  a
    font-family sans-serif
    font-size .4em
    text-decoration none
    color #fff

    &:hover
      color #fff

  .container
    position relative

  .prev
    display inline-block

  .next
    display inline-block
    position absolute
    right 0.3em
